generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Url {
  id               String   @id @default(auto()) @map("_id") @db.ObjectId
  code             String   @unique
  short_link       String   @unique
  destination_link String
  full_link        String
  resource_id      String
  offer_id         String
  store_name       String
  created_at       DateTime @default(now())

  @@map("urls")
}

model RedirectorUrl {
  id               String @id @default(auto()) @map("_id") @db.ObjectId
  redirector_id    String
  code             String @unique
  short_link       String @unique
  destination_link String

  @@map("redirector_urls")
}
